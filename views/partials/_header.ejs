<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (username) { %>
          <h5 class="">Logged in as: <%- username %></h5>
          <form method="POST" action="/logout" class="form-inline">
            <button type="submit" class="btn btn-outline-secondary">Logout</button>
          </form>
        <% } else { %>
        <form method="POST" action="/login" class="form-inline">
          <input placeholder="username" name="username" class="form-control mr-sm-2"/>
          <button type="submit" class="btn btn-outline-success my-2 my-sm-0">Login</button>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>